[Unit]
Description=Yumemi
After=network.target

[Service]
User=www-data
Group=www-data
Environment="HUBOT_DISCORD_EMAIL={{ pillar['yumemi']['discord']['email'] }}"
Environment="HUBOT_DISCORD_PASSWORD={{ pillar['yumemi']['discord']['password'] }}"
ExecStart=/srv/kazamatsuri/yumemi/bin/hubot -a discord
WorkingDirectory=/srv/kazamatsuri/yumemi
TimeoutSec=10
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target
